<Window x:Class="Kursach_1._2.ForgetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kursach_1._2"
        mc:Ignorable="d"
        Title="Восстановление пароля" Height="250" Width="400">
   
    <Grid Background="#444444">

        <Label Content="Восстановление пароля" FontFamily="Candara" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30"></Label>

        <Label x:Name="emailLabel" Content="Почта:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-240,0,0,0" Foreground="White" FontSize="16" FontFamily="Cnadara"/>
        <TextBox x:Name="emailTextbox" HorizontalAlignment="Stretch" Height="30" VerticalAlignment="Top" Margin="110,95,50,0" FontSize="16" FontFamily="Candara"/>

        <Button x:Name="reestablishButton" Content="Восстановить доступ" HorizontalAlignment="Stretch" Margin="50,0,50,30" VerticalAlignment="Bottom" Height="30" FontSize="16" FontFamily="Candara" Click="reestablishButton_Click"/>

    </Grid>
</Window>
